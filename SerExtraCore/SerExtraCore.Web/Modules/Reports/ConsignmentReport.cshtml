            }*@

        </div>
        <div class="col-sm-4">Statement Period:@Model.aboutreport.FromDate.ToShortDateString() To: @Model.aboutreport.ToDate.ToShortDateString()</div>
    </div>
    <!-- info row -->
    <!-- /.row -->
    <!-- Table row -->
    <div>

        <table border="1" style="border-width:thin;border-color:gainsboro">
            <thead>
                <tr>
                    <th width="40px" style="text-align:center"><strong style="font-size:10px;font-style:normal">SlNo</strong></th>
                    <th width="100px" style="text-align:center"><strong style="font-size:10px;font-style:normal">Date</strong></th>
                    <th width="120px" style="text-align:center"><strong style="font-size:10px;font-style:normal">Shipper</strong></th>
                    <th width="120px" style="text-align:center"><strong style="font-size:10px;font-style:normal">Consignee</strong></th>
                    <th width="100px" style="text-align:center"><strong style="font-size:10px;font-style:normal">StartDate</strong></th>
                    <th width="100px" style="text-align:center"><strong style="font-size:10px;font-style:normal">EndDate</strong></th>
                    <th width="100px" style="text-align:center"><strong style="font-size:10px;font-style:normal">VehicleNumber</strong></td>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model.Details)
                {
                <tr>
                    <td style="text-align:center"><strong style="font-size:8px;font-style:normal;text-align:center">@(d.slno)</strong></td>
                    <td style="text-align:center"><strong style="font-size:8px;font-style:normal;text-align:center">@(d.Date.ToShortDateString())</strong></td>
                    <td style="text-align:center"><strong style="font-size:8px;font-style:normal;text-align:center">@(d.Shipper)</strong></td>
                    <td style="text-align:center"><strong style="font-size:8px;font-style:normal;text-align:center">@(d.Consignee)</strong></td>
                    <td style="text-align:center">
                        <strong style="font-size:8px;font-style:normal">
                            @if (@d.StartDate != null)
                            {
                                @((d.StartDate ?? DateTime.Today).ToShortDateString());
                            }

                        </strong>
                    </td>

                    <td style="text-align:center">
                        <strong style="font-size:8px;font-style:normal;text-align:center">
                            @if (d.EndDate != null)
                            {
                                @((d.EndDate ?? DateTime.Today).ToShortDateString());
                            }
                        </strong>
                    </td>
                    <td style="text-align:center"><strong style="font-size:8px;font-style:normal;text-align:center">@(d.VehicleNumber)</strong></td>
                    
                </tr>
                }



            </tbody>
        </table>
    </div>




