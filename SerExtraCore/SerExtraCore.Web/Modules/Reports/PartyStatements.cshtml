    <div class="row">
        <div class="col-sm-8">
            <h2 class="page-header" style="text-align:center">Party Statement</h2>
            <h2 class="page-header" style="text-align:center">Party:@Model.aboutreport.PartyName @if(Model.aboutreport.Ledger!=null){<p> Ledger:@Model.aboutreport.Ledger </p>}</h2>
        </div>
        <div class="col-sm-4">Statement Period:@Model.aboutreport.FromDate.ToShortDateString() To: @Model.aboutreport.ToDate.ToShortDateString()</div>
    </div>
    <!-- info row -->
    <!-- /.row -->
    <!-- Table row -->
    <div>

        <table border="1" style="border-width:thin;border-color:gainsboro">
            <thead>
                <tr>
                    <th width="100px" style="text-align:center"><strong style="font-size:10px;font-style:normal">TrxDate</strong></th>
                    <th width="50px" style="text-align:center"><strong style="font-size:10px;font-style:normal">VNo</strong></th>
                    <th width="120px" style="text-align:center"><strong style="font-size:10px;font-style:normal">Debit Ledger</strong></th>
                    <th width="120px" style="text-align:center"><strong style="font-size:10px;font-style:normal">Credit Ledger</strong></th>
                    <th width="200px" style="text-align:center"><strong style="font-size:10px;font-style:normal">Remarks</strong></th>
                    <th width="120px" style="text-align:center"><strong style="font-size:10px;font-style:normal">Debit</strong></th>
                    <th width="120px" style="text-align:center"><strong style="font-size:10px;font-style:normal">Credit</strong></th>
                    <th width="120px" style="text-align:center"><strong style="font-size:10px;font-style:normal">Balance</strong></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model.Details)
                {
                <tr>
                    <td>
                        <strong style="font-size:8px;font-style:normal;text-align:center">
                            @if (d.TrxDate != null)
                            {
                                <p>@((d.TrxDate ?? DateTime.Today).ToShortDateString())</p>
                            }
                        </strong>
                    </td>
                    <td style="text-align:center"><strong style="font-size:8px;font-style:normal;text-align:center">@d.VNo</strong></td>
                    <td style="text-align:center"><strong style="font-size:8px;font-style:normal;text-align:center">@(d.DebitLedger)</strong></td>
                    <td style="text-align:center"><strong style="font-size:8px;font-style:normal;text-align:center">@(d.CreditLedger)</strong></td>
                    <td style="text-align:left"><strong style="font-size:8px;font-style:normal;text-align:left">@(d.Remarks)</strong></td>
                    <td style="text-align:right"><strong style="font-size:8px;font-style:normal;text-align:right">@(d.Debit)</strong></td>
                    <td style="text-align:right"><strong style="font-size:8px;font-style:normal;text-align:right">@(d.Credit)</strong></td>
                    <td style="text-align:right"><strong style="font-size:8px;font-style:normal;text-align:right">@(d.Balance)</strong></td>
                </tr>
                }
            <tr>
                <td><strong style="font-size:8px;font-style:normal">Total:</strong></td>
                <td style="text-align:center"><strong style="font-size:8px;font-style:normal;text-align:center"></strong></td>
                <td style="text-align:center"><strong style="font-size:8px;font-style:normal;text-align:center"></strong></td>
                <td style="text-align:center"><strong style="font-size:8px;font-style:normal;text-align:center"></strong></td>
                <td style="text-align:right"><strong style="font-size:8px;font-style:normal;text-align:center"></strong></td>
                <td style="text-align:right"><strong style="font-size:8px;font-style:normal;text-align:center">@Model.Details.Sum(i => i.Debit)</strong></td>
                <td style="text-align:right"><strong style="font-size:8px;font-style:normal;text-align:center">@Model.Details.Sum(i => i.Credit)</strong></td>
                <td style="text-align:right"><strong style="font-size:8px;font-style:normal;text-align:center">@(Model.Details.Sum(i => i.Debit) - Model.Details.Sum(i => i.Credit))</strong></td>
            </tr>

            </tbody>
        </table>
    </div>




