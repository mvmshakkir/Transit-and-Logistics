    <!-- Table row -->
    <div class="container">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th width="200px" style="text-align:left"><strong style="font-size:12px;font-style:normal">Ledger</strong></th>
                    <th width="200px" style="text-align:right"><strong style="font-size:12px;font-style:normal">Debit Amount</strong></th>
                    <th width="200px" style="text-align:right"><strong style="font-size:12px;font-style:normal">Credit Amount</strong></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model.Details)
                {
                    <tr>
                        <td><strong style="font-size:10px;font-style:normal">@d.GL</strong></td>
                        <td style="text-align:right">
                            <strong style="font-size:10px;font-style:normal;text-align:center">
                                @if (d.DebitAmount == 0) { }
                                else
                                {@d.DebitAmount;
                            }
                        </strong>
                    </td>
                    <td style="text-align:right">
                        <strong style="font-size:10px;font-style:normal;text-align:center">
                            @if (d.CreditAmount == 0) { }
                            else
                            {@d.CreditAmount;
                            }
                    </strong>
                </td>
            </tr>
        }
                <tr>
                    <td><strong style="font-size:12px;font-style:normal;font-weight:bold">Total:</strong></td>
                    <td style="text-align:right;font-style:normal;font-weight:bold"><strong style="font-size:12px;font-style:normal;text-align:center">@Model.aboutreport.TotalDebit</strong></td>
                    <td style="text-align:right;font-style:normal;font-weight:bold"><strong style="font-size:12px;font-style:normal;text-align:center">@Model.aboutreport.TotalCredit</strong></td>
                </tr>

            </tbody>
        </table>
    </div>




