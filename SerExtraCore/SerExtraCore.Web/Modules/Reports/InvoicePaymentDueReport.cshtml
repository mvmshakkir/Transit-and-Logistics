@model SerExtraCore.Transactions.Pages.InvoicePaymentDueReport.AccountStatementViewtData
@if ((bool?)ViewData["Printing"] == true)
{
    Layout = MVC.Views.Shared._LayoutNoNavigation;
}
<div id="headrow">
    @Html.Raw((Authorization.UserDefinition as UserDefinition).ReportHeader)
</div>
<section class="invoice">
    @*<div class="row">
            <div class="col-xs-12">
                <h2 class="page-header" style="text-align:center">
                    Account Statement<br />
                    From:@Model.aboutreport.FromDate.ToShortDateString() To:@Model.aboutreport.ToDate.ToShortDateString()
                    <small class="pull-right">Date: @DateTime.Now.ToShortDateString()</small>
                </h2>
            </div>
        </div>*@
    <div class="row">
        <div class="col-sm-8">
            <h2 class="page-header" style="text-align:center">Invoice Payment Dues</h2>

        </div>
        <div class="col-sm-4">
            As Date:@Model.aboutreport.FromDate.ToShortDateString()
            @if (Model.customers != null)
            {
                <label> Customer : @Model.customers.CustomerName</label>
            }
        </div>

    </div>
    <!-- info row -->
    <!-- /.row -->
    <!-- Table row -->
    @if (Model.customers != null)
    {
        <div>
            <table border="1" style="border-width:thin;border-color:gainsboro">
                <thead>
                    <tr>
                        <th width="50px" style="text-align:center"><strong style="font-size:10px;font-style:normal">Slno</strong></th>
                        <th width="150px" style="text-align:center"><strong style="font-size:10px;font-style:normal">InvoiceDate</strong></th>
                        <th width="100px" style="text-align:center"><strong style="font-size:10px;font-style:normal">InvoiceNO</strong></th>
                        @*<th width="150px" style="text-align:center"><strong style="font-size:10px;font-style:normal">TotalAmount</strong></th>*@
                        <th width="150px" style="text-align:center"><strong style="font-size:10px;font-style:normal">DueDate</strong></th>
                        <th width="70px" style="text-align:center"><strong style="font-size:10px;font-style:normal">OverDue Days</strong></th>
                        <th width="150px" style="text-align:center"><strong style="font-size:10px;font-style:normal">Amount</strong></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model.Details)
                    {
                        <tr>
                            <td style="text-align:center"><strong style="font-size:9px;text-align:center;font-style:normal">@d.Slno</strong></td>
                            <td style="text-align:center"><strong style="font-size:9px;font-style:normal;text-align:center">@d.InvoiceDate.ToShortDateString()</strong></td>
                            <td style="text-align:center"><strong style="font-size:9px;font-style:normal;text-align:center">@(d.InvoiceNO)</strong></td>
                            @*<td style="text-align:right"><strong style="font-size:8px;font-style:normal;text-align:center">@(d.TotalAmount)</strong></td>*@
                            <td style="text-align:center"><strong style="font-size:9px;font-style:normal;text-align:center">@(d.DueDate.ToShortDateString())</strong></td>
                            <td style="text-align:center"><strong style="font-size:9px;font-style:normal;text-align:center">@(d.DueDays)</strong></td>

                            <td style="text-align:right"><strong style="font-size:9px;font-style:normal;text-align:center">@(d.Amount)</strong></td>
                        </tr>
                    }
                    <tr>
                        <td style="text-align:center"><strong style="font-size:9px;text-align:center;font-style:normal"></strong></td>
                        <td style="text-align:left"><strong style="font-size:11px;font-style:normal;text-align:center">Total</strong></td>
                        <td style="text-align:center"><strong style="font-size:9px;font-style:normal;text-align:center"></strong></td>

                        @*<td style="text-align:right"><strong style="font-size:8px;font-style:normal;text-align:center"></strong></td>*@
                        <td style="text-align:center"><strong style="font-size:9px;font-style:normal;text-align:center"></strong></td>
                        <td style="text-align:center"><strong style="font-size:9px;font-style:normal;text-align:center"></strong></td>

                        <td style="text-align:right"><strong style="font-size:11px;font-style:normal;text-align:center">@(Model.Details.Sum(i=>i.Amount))</strong></td>
                    </tr>

                </tbody>
            </table>
        </div>
    }
    else
    {
        <div>
            <table border="1" style="border-width:thin;border-color:gainsboro">
                <thead>
                    <tr>
                        <th width="50px" style="text-align:center"><strong style="font-size:10px;font-style:normal">Slno</strong></th>
                        <th width="200px" style="text-align:center"><strong style="font-size:10px;font-style:normal">Customer</strong></th>
                        <th width="100px" style="text-align:center"><strong style="font-size:10px;font-style:normal">InvoiceDate</strong></th>
                        <th width="100px" style="text-align:center"><strong style="font-size:10px;font-style:normal">InvoiceNO</strong></th>
                        @*<th width="100px" style="text-align:center"><strong style="font-size:10px;font-style:normal">TotalAmount</strong></th>*@
                        <th width="100px" style="text-align:center"><strong style="font-size:10px;font-style:normal">DueDate</strong></th>
                        <th width="70px" style="text-align:center"><strong style="font-size:10px;font-style:normal">OverDue Days</strong></th>
                        <th width="100px" style="text-align:center"><strong style="font-size:10px;font-style:normal">Amount</strong></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model.Details)
                    {
                        <tr>
                            <td style="text-align:center"><strong style="font-size:9px;text-align:center;font-style:normal">@d.Slno</strong></td>
                            <td style="text-align:left"><strong style="font-size:9px;font-style:normal;text-align:center">@d.CustomerName</strong></td>
                            <td style="text-align:center"><strong style="font-size:9px;font-style:normal;text-align:center">@d.InvoiceDate.ToShortDateString()</strong></td>
                            <td style="text-align:center"><strong style="font-size:9px;font-style:normal;text-align:center">@(d.InvoiceNO)</strong></td>
                            @*<td style="text-align:right"><strong style="font-size:8px;font-style:normal;text-align:center">@(d.TotalAmount)</strong></td>*@
                            <td style="text-align:center"><strong style="font-size:9px;font-style:normal;text-align:center">@(d.DueDate.ToShortDateString())</strong></td>
                            <td style="text-align:center"><strong style="font-size:9px;font-style:normal;text-align:center">@(d.DueDays)</strong></td>

                            <td style="text-align:right"><strong style="font-size:9px;font-style:normal;text-align:center">@(d.Amount)</strong></td>
                        </tr>
                    }
                    <tr>
                        <td style="text-align:center"><strong style="font-size:9px;text-align:center;font-style:normal"></strong></td>
                        <td style="text-align:left"><strong style="font-size:11px;font-style:normal;text-align:center">Total</strong></td>
                        <td style="text-align:center"><strong style="font-size:9px;font-style:normal;text-align:center"></strong></td>
                        <td style="text-align:center"></td>
                        @*<td style="text-align:right"><strong style="font-size:8px;font-style:normal;text-align:center"></strong></td>*@
                        <td style="text-align:center"><strong style="font-size:9px;font-style:normal;text-align:center"></strong></td>
                        <td style="text-align:center"><strong style="font-size:9px;font-style:normal;text-align:center"></strong></td>

                        <td style="text-align:right"><strong style="font-size:11px;font-style:normal;text-align:center">@(Model.Details.Sum(i=>i.Amount))</strong></td>
                    </tr>

                </tbody>
            </table>
        </div>
    }
    <div style="text-align:center;font-size:8px" >
        <br />
        <label>printed on : @DateTime.Now</label>
    </div>




    @*<div class="row">
            <div class="col-xs-6">

            </div>
             /.col
            <div class="col-xs-6">
                <p class="lead">Amount Due @(Model.Order.OrderDate.Value.AddDays(10).ToShortDateString())</p>

                @{
                    var subTotal = Model.Details.Sum(x => x.LineTotal ?? 0);
                }

                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <th style="width:50%">Subtotal:</th>
                            <td>$@subTotal.ToString("#,##0.00")</td>
                        </tr>
                        <tr>
                            <th>Tax (9.3%)</th>
                            <td>$@((subTotal * 0.093m).ToString("#,##0.00"))</td>
                        </tr>
                        <tr>
                            <th>Shipping:</th>
                            <td>$5.80</td>
                        </tr>
                        <tr>
                            <th>Total:</th>
                            <td>$@((subTotal * 1.093m).ToString("#,##0.00"))</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>*@
</section>
