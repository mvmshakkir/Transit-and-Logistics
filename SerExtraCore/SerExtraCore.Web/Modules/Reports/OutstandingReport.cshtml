    <div class="row">
        <div class="col-sm-8">
            <h2 class="page-header" style="text-align:center">Outstanding Report</h2>
            @*<h2 class="page-header" style="text-align:center">Customer:@Model.customers.CustomerName</h2>*@
        </div>
        <div class="col-sm-4">
            Statement Period:
            
            @if (@Model.aboutreport.ToDate != null)
            {
                <label>As On :</label> @((Model.aboutreport.ToDate ?? DateTime.Today).ToShortDateString());
            }
            
        </div>
    </div>
    <!-- info row -->
    <!-- /.row -->
    <!-- Table row -->
    <div>

        <table border="1" style="border-width:thin;border-color:gainsboro">
            <thead>
                <tr>
                    <th width="80px" style="text-align:center"><strong style="font-size:10px;font-style:normal">Slno</strong></th>
                    <th width="250px" style="text-align:center"><strong style="font-size:10px;font-style:normal">CustomerName</strong></th>
                    <th width="150px" style="text-align:center"><strong style="font-size:10px;font-style:normal">TrxAmount</strong></th>

                    <th width="150px" style="text-align:center"><strong style="font-size:10px;font-style:normal">ReceivedAmount</strong></th>
                    <th width="150px" style="text-align:center"><strong style="font-size:10px;font-style:normal">Balance</strong></th>
                </tr>
            </thead>
            <tbody>
                
                @foreach (var d in Model.Details)
                {
                <tr>
                    <td style="text-align:center"><strong style="font-size:8px;font-style:normal;text-align:center">@d.Slno</strong></td>
                    <td style="text-align:left"><strong style="font-size:8px;font-style:normal;text-align:center">@(d.CustomerName)</strong></td>
                    <td style="text-align:right"><strong style="font-size:8px;font-style:normal;text-align:center">@(d.TrxAmount)</strong></td>
                    <td style="text-align:right"><strong style="font-size:8px;font-style:normal;text-align:center">@(d.ReceivedAmount)</strong></td>
                    <td style="text-align:right"><strong style="font-size:8px;font-style:normal;text-align:center">@(d.Balance)</strong></td>

                </tr>
                }
            <tr>
                <td><strong style="font-size:8px;font-style:normal"></strong></td>
                <td style="text-align:center"><strong style="font-size:8px;font-style:normal;text-align:center">Total:</strong></td>
                <td style="text-align:right"><strong style="font-size:8px;font-style:normal;text-align:center">@Model.Details.Sum(i=>i.TrxAmount)</strong></td>
                <td style="text-align:right"><strong style="font-size:8px;font-style:normal;text-align:right">@Model.aboutreport.TotalAmount</strong></td>
                <td style="text-align:right"><strong style="font-size:8px;font-style:normal;text-align:right">@Model.Details.Sum(i => i.Balance)</strong></td>
            </tr>

            </tbody>
        </table>
    </div>




    @*<div class="row">
            <div class="col-xs-6">

            </div>
             /.col
            <div class="col-xs-6">
                <p class="lead">Amount Due @(Model.Order.OrderDate.Value.AddDays(10).ToShortDateString())</p>

                @{
                    var subTotal = Model.Details.Sum(x => x.LineTotal ?? 0);
                }

                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <th style="width:50%">Subtotal:</th>
